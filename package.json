{
  "name": "calmcomments",
  "version": "0.1.0",
  "description": "A Project to learn",
  "main": "build/server.js",
  "scripts": {
    "start": "run-p _start:mainserver",
    "_start:mainserver": "node build/server.js",
    "dev": "run-p watch lint serve:dev",
    "test": "mocha --recursive --compilers js:babel-core/register",
    "build": "run-s build:*",
    "clean": "rimraf build",
    "serve": "npm start",
    "serve:dev": "run-p _serve:dev:mainserver",
    "_serve:dev:mainserver": "nodemon -w build/server.js",
    "watch": "run-p watch:*",
    "lint": "run-p lint:js _watch:lint:js",
    "mkdir": "mkdirp build",
    "clean:html": "rimraf build/public/index.html",
    "mkdir:html": "run-s mkdir",
    "build:html": "run-s clean:html mkdir:html _build:html",
    "_build:html": "cpr src/index.html build/public/index.html",
    "watch:html": "run-s build:html _watch:html",
    "_watch:html": "chokidar src/index.html -c \"npm run build:html\"",
    "clean:js": "rimraf build/public/js",
    "mkdir:js": "mkdirp build/public/js",
    "build:js": "run-s clean:js mkdir:js _build:js",
    "_build:js": "run-p _build:js:server _build:js:client",
    "_build:js:server": "webpack --config webpack/webpack.server.config.js",
    "_build:js:client": "webpack --config webpack/webpack.client.config.js",
    "watch:js": "run-s build:js _watch:js",
    "_watch:js": "run-p _watch:js:server _watch:js:client",
    "_watch:js:server": "webpack --config webpack/webpack.server.config.js --watch",
    "_watch:js:client": "webpack --config webpack/webpack.client.config.js --watch",
    "lint:js": "eslint ./src --ext .js --ext .jsx --cache || true",
    "_watch:lint:js": "chokidar 'src/**/*.jsx' 'src/**/*.js' -c \"npm run lint:js\"",
    "clean:css": "rimraf build/public/css",
    "mkdir:css": "run-s mkdir",
    "build:css": "run-s clean:css mkdir:css _build:css",
    "_build:css": "cpr src/css build/public/css",
    "watch:css": "run-s build:css _watch:css",
    "_watch:css": "chokidar src/css/**/* -c \"npm run build:css\"",
    "mkdir:assets": "run-s mkdir",
    "clean:assets": "rimraf build/public/assets",
    "build:assets": "run-s clean:assets mkdir:assets _build:assets",
    "_build:assets": "cpr src/assets build/public/assets",
    "watch:assets": "run-s build:assets _watch:assets",
    "_watch:assets": "chokidar src/assets/**/* -c \"npm run build:assets\"",
    "watch:git": "chokidar * -c \"git diff --shortstat\"",
    "deploy": "run-s deploy:build",
    "deploy:build": "run-s build:html build:css build:assets deploy:build:js",
    "deploy:build:js": "run-s clean:js mkdir:js deploy:_build:js",
    "deploy:_build:js": "run-s deploy:_build:js:server deploy:_build:js:client",
    "deploy:_build:js:server": "webpack --config webpack/webpack.server.prod.config.js",
    "deploy:_build:js:client": "webpack --config webpack/webpack.client.prod.config.js"
  },
  "author": "Mark Williams",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-loader": "^6.2.10",
    "babel-plugin-react": "^1.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "chokidar-cli": "^1.2.0",
    "compression-webpack-plugin": "^0.3.2",
    "cpr": "^2.0.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "http-server": "^0.9.0",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "base58": "^0.1.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.16.0",
    "connect-redis": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-sequelize": "0.0.4",
    "express-session": "^1.15.0",
    "graceful-fs": "^4.1.11",
    "http-proxy": "^1.16.2",
    "isomorphic-fetch": "^2.2.1",
    "material-ui": "^0.16.7",
    "moment": "^2.17.1",
    "morgan": "^1.7.0",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.2",
    "react": "^15.4.2",
    "react-autosize-textarea": "^0.3.6",
    "react-cookie": "^1.0.4",
    "react-dom": "^15.4.2",
    "react-markdown": "^2.4.4",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "redis": "^2.6.5",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.0.0",
    "redux-thunk": "^2.2.0",
    "require-environment-variables": "^1.1.2",
    "sequelize": "^3.30.1",
    "sequelize-cli": "^2.5.1",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.2",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "validator": "^6.2.1"
  }
}
